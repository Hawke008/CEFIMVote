					<label for="titulaire">Titulaire</label>
					<select type="select" class="candidats">
						{% for electeur in electeurs%}
							<option value="{{electeur.id}}">{{electeur.prenom}}
								{{electeur.nom}}</option>
						{% endfor %}
					</select>
				</div>
				<div class="col">
					<label for="suppleant">Suppl√©ant</label>
