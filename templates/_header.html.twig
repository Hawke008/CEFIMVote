{% block stylesheets %}
	<link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet">
{% endblock %}
<header>

	<style>
		.create-session, .logout-session {
			text-decoration: none;
			color: var(--dark-grey) display: block;
			font-size: 18px;
			font-weight:700;
		}
		.plus-icon {
			display: block;
			width: 35px;
			height: 35px;
			background-color: var(--logo-bg-color);
			border-radius: 50%;
			color: white;
			font-size: 24px;
			margin-right: 5px;
			text-align: center;
			font-weight: 700;
			cursor: pointer
		}
.logout{
	margin-left:30px;
	font-weight:300;
}
	
	</style>
	{# <nav class="m-4 text-end me-5 mb-5">
				<a href="">Register</a>
			</nav> #}
	{% set current_path = app.request.get('_route') %}
	<div class='mt-5 mb-5 p-2'>
{% if current_path!='app_home'%}

		<div class='text-start mt-3 d-flex justify-content-between align-items-center'>
			<h1>CEFIMVote</h1>
			<div class="d-flex justify-content-between align-items-center">
			{% if current_path=='app_liste_sessions'%}
				<a href={{path('session_creation')}} class="create-session">
					<div class='d-flex align-items-center'>
						<label class="plus-icon">+</label>Cr√©er une session</div>
				</a>
			{% endif %}
			{% if app.user%}
				<a href={{path('app_logout')}} class="logout-session"><span class="logout"><strong>x</strong> logout</span></a>
			{% endif %}
			</div>
		</div>
	</div>
	{% endif %}

	{# <div class="mt-5" style="margin-top:300px">
				<div class='text-center'>
					<h1>CEFIMVote</h1>
				</div>
			</div> #}
</header>
